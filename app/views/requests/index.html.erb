<h1>Listing requests</h1>

<table>
  <tr>
    <th>Requester name</th>
    <th>Requester email</th>
    <th>Title</th>
    <th>Link</th>
    <th>New</th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%=h request.requester_name %></td>
    <td><%=h request.requester_email %></td>
    <td><%=h request.title %></td>
    <td><%=h request.link %></td>
    <td><%=h request.new %></td>
    <td><%= link_to 'Show', request %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New request', new_request_path %>